<body class="fixed-top-navbar">
    <div class="wrapper">
        <div class="iq-top-navbar">
            <div class="iq-navbar-custom">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="iq-navbar-logo d-flex align-items-center justify-content-between">
                        <i class="ri-menu-line wrapper-menu"></i>
                        <a href="index.html" class="header-logo">
                            <img src="/images/logo.png" class="img-fluid rounded-normal light-logo" alt="logo">
                            <img src="/images/logo-white.png" class="img-fluid rounded-normal darkmode-logo" alt="logo">
                        </a>
                    </div>
                    <div class="iq-menu-horizontal">
                        <nav class="iq-sidebar-menu">
                            <div class="iq-sidebar-logo d-flex align-items-center justify-content-between">
                                <a href="index.html" class="header-logo">
                                    <img src="/images/logo.png" class="img-fluid rounded-normal" alt="logo">
                                </a>
                                <div class="iq-menu-bt-sidebar">
                                    <i class="las la-bars wrapper-menu"></i>
                                </div>
                            </div>
                        </nav>
                    </div>
                    <nav class="navbar navbar-expand-lg navbar-light p-0">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto navbar-list align-items-center">
                                <li class="caption-content">
                                    <a href="#" class="iq-user-toggle">
                                        <img src="/images/user/10.jpg" class="img-fluid rounded" alt="user">
                                    </a>
                                    <div class="iq-user-dropdown">
                                        <div class="card">
                                            <div
                                                class="card-header d-flex justify-content-between align-items-center mb-0">
                                                <div class="header-title">
                                                    <h4 class="card-title mb-0">Profile</h4>
                                                </div>
                                                <div class="close-data text-right badge badge-primary cursor-pointer"><i
                                                        class="ri-close-fill"></i></div>
                                            </div>
                                            <div class="data-scrollbar" data-scroll="2">
                                                <div class="card-body">
                                                    <div class="profile-header">
                                                        <div class="cover-container ">
                                                            <div class="media align-items-center mb-4">
                                                                <img src="/images/user/10.jpg" alt="profile-bg"
                                                                    class="rounded img-fluid avatar-80">
                                                                <% if (isLoggedIn) { %>
                                                                <div class="media-body profile-detail ml-3">
                                                                    <h3><%= user.name %>
                                                                    </h3>
                                                                    <div class="d-flex flex-wrap">
                                                                        <p class="mb-1"><%= user.phoneno %></p>
                                                                        <form action="/logout" method="POST">
                                                                            <button type="submit"
                                                                                class="btn btn-danger ml-3">Sign
                                                                                Out</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                                <% }else{ %>
                                                                <div class="media-body profile-detail ml-3">
                                                                    <div class="d-flex flex-wrap">
                                                                        <a href="/login"
                                                                            class="btn btn-primary ml-3">Log in
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="p-3"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>