<%- include('./includes/head.ejs') %>

<body class=" ">

   <div class="wrapper">
      <section class="login-content">
         <div class="container h-100">
            <div class="row align-items-center justify-content-center h-100">
               <div class="col-12">
                  <div class="row align-items-center">
                     <div class="col-lg-6">
                        <h2 class="mb-2"><%= bodyTitle  %> Log In</h2>
                        <% if(!bodyTitle){ %>
                        <p>To Keep connected with us please login with your personal info.</p>
                        <% } %>
                        <form action="/<%= bodyTitle === 'Admin' ? 'admin' : 'login' %>" method="POST">
                           <div class="row">
                              <div class="col-lg-12">
                                 <div class="floating-label form-group">
                                    <input class="floating-input form-control" name="email" id="email" type="email"
                                       placeholder=" ">
                                    <label>Email</label>
                                 </div>
                              </div>
                              <div class="col-lg-12">
                                 <div class="floating-label form-group">
                                    <input class="floating-input form-control" name="password" id="password"
                                       type="password" placeholder=" ">
                                    <label>Password</label>
                                 </div>
                              </div>
                           </div>
                           <button type="submit" class="btn btn-primary">Log In</button>
                           <% if(!bodyTitle){ %>
                           <p class="mt-3">
                              Create an Account <a href="/signup" class="text-primary">Sign Up</a>
                           </p>
                           <% } %>
                        </form>
                     </div>
                     <div class="col-lg-6 mb-lg-0 mb-4 mt-lg-0 mt-4">
                        <img src="/images/login/01.png" class="img-fluid w-80" alt="">
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
   </div>
   <%- include('./includes/foot.ejs') %>